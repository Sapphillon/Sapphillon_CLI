{
  "name": "@sapphillon/cli",
  "version": "0.1.0",
  "exports": "./main.ts",
  "tasks": {
    "dev": "deno run --watch --allow-read --allow-write --allow-net --allow-run --allow-env main.ts",
    "start": "deno run --allow-read --allow-write --allow-net --allow-run --allow-env main.ts",
    "test": "deno test --allow-read --allow-write --allow-run --allow-env",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check"
  },
  "lint": {
    "include": ["**/*.ts"],
    "exclude": []
  },
  "fmt": {
    "include": ["**/*.ts"],
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  }
}
